<div class="container">
  <h1>Sounding Board</h1>
  <h3>Share a song</h3>

  <%= form_for :post, :method => "get", :url => { :action => "search", :controller => "songs" } do |f| %>
    <%= f.label :title %>:
    <%= f.text_field :title %> *
    <br>
    <%= f.label :motivation %>:<br>
    <%= f.text_area :motivation %>
    <br>
    <%= f.label :song %>:
    <%= f.text_field :song%> *
    <br>
    <%= f.submit "Create Post" %>
  <% end %>

  <br><br>

  <p>* Required field</p>
</div>