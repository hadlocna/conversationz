<div class="container">

  <%= form_for :user, :url => { :action => "create" } do |f|%>
    <%= f.label :name %>:
    <%= f.text_field :name, :required => true%>
    <br>

    <%= f.label :email %>:
    <%= f.email_field :email, :required => true  %>
    <br>

    <%= f.label :password %>:
    <%= f.password_field :password, :required => true %>
    <br>

    <%= f.submit "Sign Up!", :id=> "signup" %>
  <% end %>

</div>
