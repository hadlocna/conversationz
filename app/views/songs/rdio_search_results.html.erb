<div class="rdio_search_results">
  <h3>Search Results</h3>
  <% if @songs.empty? %>
    <h4>No songs were found that matched your search criteria. Try a different search term.</h4>
  <% else %>
    <% @songs.each do |song| %>
        <%= form_for :post, :url => posts_path, :method => "post" do |f| %>
        <input type="hidden" value="<%= post_data[:title] %>" name="post_title">
        <input type="hidden" value="<%= post_data[:motivation] %>" name="post_motivation">
        <input type="hidden" value="<%= song[:title] %>" name="song_title">
        <input type="hidden" value="<%= song[:short_url] %>" name="song_embed_url">
        <input type="hidden" value="<%= song[:artist] %>" name="song_artist">
        <input type="hidden" value="<%= song[:album] %>" name="song_album">

        <%= f.submit  "#{song.artist} - #{song.album} - #{song.title}" %>
        <% end %>
    <% end %>
  <% end %>


</div>